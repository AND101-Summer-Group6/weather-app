<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/image_forecast_condition"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date1"
        app:layout_constraintBottom_toTopOf="@id/image_forecast_condition"
        app:layout_constraintEnd_toEndOf="@id/image_forecast_condition"
        app:layout_constraintStart_toStartOf="@id/image_forecast_condition"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_forecast_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30F/70F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/image_forecast_condition"
        app:layout_constraintStart_toStartOf="@id/image_forecast_condition"
        app:layout_constraintTop_toBottomOf="@id/image_forecast_condition" />

</androidx.constraintlayout.widget.ConstraintLayout>